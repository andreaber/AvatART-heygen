# Configuración de Flask
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=tu-clave-secreta-super-segura-cambiala-en-produccion

# Base de datos
DATABASE_URL=sqlite:///gem_avatart.db
# Para PostgreSQL (recomendado en producción):
# DATABASE_URL=postgresql://usuario:password@localhost:5432/gem_avatart

# HeyGen API
HEYGEN_BASE_URL=https://api.heygen.com

# Configuración de Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-password-de-app

# JWT
JWT_SECRET_KEY=jwt-secret-super-seguro-cambialo-en-produccion
JWT_ACCESS_TOKEN_EXPIRES=3600

# Configuración de archivos
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216

# Paginación
ITEMS_PER_PAGE=20

# Tasas de comisión (porcentajes decimales)
PRODUCER_COMMISSION_RATE=0.15
SUBPRODUCER_COMMISSION_RATE=0.10
AFFILIATE_COMMISSION_RATE=0.05

# Redis (para tareas en segundo plano)
REDIS_URL=redis://localhost:6379/0

# Configuración de Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0